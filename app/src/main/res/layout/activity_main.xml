<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <!-- FrameLayout to hold the 4 section views -->
    <FrameLayout
        android:id="@+id/contentFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- ==================== HOME SECTION ==================== -->
        <ScrollView
            android:id="@+id/homeSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- AppBar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/app_name"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/btnSearch"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="4dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="بحث"
                        android:padding="8dp"
                        android:src="@android:drawable/ic_menu_search"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/btnFavorites"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="8dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="المفضلة"
                        android:padding="8dp"
                        android:src="@drawable/ic_heart_outline"
                        app:tint="@color/white" />

                    <ImageView
                        android:id="@+id/imgLogo"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:padding="4dp"
                        android:src="@drawable/logo_transparent"
                        android:contentDescription="@string/app_name" />
                </LinearLayout>

                <!-- Banner Slider -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvBanners"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp" />

                <!-- Top Products Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/home_top_products"
                    android:textColor="@color/colorTextMain"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTopProducts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:clipToPadding="false"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

                <!-- Categories Section -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/home_categories"
                    android:textColor="@color/colorTextMain"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHomeCategories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="16dp"
                    android:clipToPadding="false"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp" />

            </LinearLayout>
        </ScrollView>

        <!-- ==================== CATEGORIES SECTION ==================== -->
        <LinearLayout
            android:id="@+id/categoriesSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- AppBar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/nav_categories"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvCategories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:padding="12dp" />
        </LinearLayout>

        <!-- ==================== OFFERS SECTION ==================== -->
        <LinearLayout
            android:id="@+id/offersSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- AppBar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/offers_title"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOffers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="12dp"
                android:clipToPadding="false"
                android:padding="12dp" />
        </LinearLayout>

        <!-- ==================== SUPPORT SECTION ==================== -->
        <ScrollView
            android:id="@+id/supportSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- AppBar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@color/colorPrimary"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/support_title"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- WhatsApp Button -->
                    <TextView
                        android:id="@+id/btnSupportWhatsapp"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:background="@drawable/bg_button_whatsapp"
                        android:gravity="center"
                        android:text="@string/support_whatsapp"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Telegram Button -->
                    <TextView
                        android:id="@+id/btnSupportTelegram"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/bg_button_telegram"
                        android:gravity="center"
                        android:text="@string/support_telegram"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- FAQ Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="@string/faq_title"
                        android:textColor="@color/colorTextMain"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- FAQ Item 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_faq_item"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/faqQ1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@android:drawable/arrow_down_float"
                            android:text="@string/faq_q1"
                            android:textColor="@color/colorTextMain"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/faqA1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/faq_a1"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <!-- FAQ Item 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_faq_item"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/faqQ2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@android:drawable/arrow_down_float"
                            android:text="@string/faq_q2"
                            android:textColor="@color/colorTextMain"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/faqA2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/faq_a2"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <!-- FAQ Item 3 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_faq_item"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/faqQ3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@android:drawable/arrow_down_float"
                            android:text="@string/faq_q3"
                            android:textColor="@color/colorTextMain"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/faqA3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/faq_a3"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <!-- FAQ Item 4 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/bg_faq_item"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <TextView
                            android:id="@+id/faqQ4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@android:drawable/arrow_down_float"
                            android:text="@string/faq_q4"
                            android:textColor="@color/colorTextMain"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/faqA4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="@string/faq_a4"
                            android:textColor="@color/colorTextSecondary"
                            android:textSize="14sp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <!-- About & Policies Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="معلومات التطبيق"
                        android:textColor="@color/colorTextMain"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- About Link -->
                    <LinearLayout
                        android:id="@+id/btnAbout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_faq_item"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/about_title"
                            android:textColor="@color/colorTextMain"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:src="@android:drawable/ic_menu_directions"
                            android:tint="@color/colorTextSecondary" />
                    </LinearLayout>

                    <!-- Privacy Link -->
                    <LinearLayout
                        android:id="@+id/btnPrivacy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_faq_item"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/policy_privacy_title"
                            android:textColor="@color/colorTextMain"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:src="@android:drawable/ic_menu_directions"
                            android:tint="@color/colorTextSecondary" />
                    </LinearLayout>

                    <!-- Terms Link -->
                    <LinearLayout
                        android:id="@+id/btnTerms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/bg_faq_item"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/policy_terms_title"
                            android:textColor="@color/colorTextMain"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:src="@android:drawable/ic_menu_directions"
                            android:tint="@color/colorTextSecondary" />
                    </LinearLayout>

                    <!-- Refund Link -->
                    <LinearLayout
                        android:id="@+id/btnRefund"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/bg_faq_item"
                        android:gravity="center_vertical"
                        android:padding="14dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/policy_refund_title"
                            android:textColor="@color/colorTextMain"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginStart="8dp"
                            android:src="@android:drawable/ic_menu_directions"
                            android:tint="@color/colorTextSecondary" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </FrameLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottomNavBackground"
        app:itemIconTint="@color/bottomNavActive"
        app:itemTextColor="@color/bottomNavActive"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu"
        app:elevation="8dp" />

</LinearLayout>